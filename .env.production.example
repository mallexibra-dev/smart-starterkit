# Production Environment Configuration

# Database Configuration
DB_HOST=your-production-mysql-host
DB_PORT=3306
DB_NAME=smart_starterkit_prod
DB_USER=prod_user
DB_PASSWORD=super-secure-password-change-me
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://yourapp.com

# Authentication
JWT_SECRET=super-secure-jwt-secret-change-me-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis (Optional)
REDIS_URL=redis://your-redis-host:6379
CACHE_TTL=3600

# CORS
CORS_ORIGIN=https://yourapp.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/app.log

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@yourapp.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourapp.com

# External Services
# Stripe for payments
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Cloudinary for file storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_API_KEY=phc_...

# SSL/HTTPS
SSL_CERT_PATH=/etc/ssl/certs/yourapp.crt
SSL_KEY_PATH=/etc/ssl/private/yourapp.key

# Production Only
SKIP_AUTH=false
MOCK_EMAIL=false
DEBUG_SQL=false

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=super-secure-session-secret-change-me